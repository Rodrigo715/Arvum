<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_planta_main"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/fotoplanta"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_nombrePlanta_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_planta_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Tuli"/>

    <TextView
        android:id="@+id/tv_descrPlanta_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nombrePlanta_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="(Soy una Agavacea)"/>

</RelativeLayout>